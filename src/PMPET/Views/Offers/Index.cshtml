@model IEnumerable<PMPET.Models.Offer>

@{
    ViewData["Title"] = "Offers Index";
}

<h2>Offers List</h2>

<div class="row" style="height:100px;">
    <div class="col-md-2">
        <img src="~/images/offers.png" height="75" width="75" />
        <img src="~/images/infoicon.ico" height="25" width="25" onclick="displayHelpInfo('Offers');" />
    </div>
    <div class="col-md-7" id="infoPanelContainer">
        <span style="width:100px; height:100px; visibility:hidden;" id="infoPanel" onclick="displayHelpInfo('Offers');"></span>
    </div>
</div><br/>
